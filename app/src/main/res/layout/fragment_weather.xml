<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/weather_fragment_linear"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:weightSum="10"
    tools:context = ".feature_weather.presentation.WeatherFragment"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/loading_screen_const"
        android:visibility="gone"
        >

        <ProgressBar
            android:id="@+id/progress_bar_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.286" />

        <ProgressBar
            android:id="@+id/progress_bar_btm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="192dp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/progress_bar_top"
            app:layout_constraintVertical_bias="0.899" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="24dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="10"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                >

                <TextView
                    android:id="@+id/current_location_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="75dp"
                    android:minHeight="25dp"
                    app:layout_constraintBottom_toTopOf="@+id/current_hour_image"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/current_hour_image"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.542"
                    tools:text="Arlington" />

                <ImageView
                    android:id="@+id/current_hour_image"
                    android:layout_width="160dp"
                    android:layout_height="140dp"
                    android:contentDescription="@string/forecast_image"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.161"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.231"
                    tools:src="@drawable/ic_face_48dp" />

                <TextView
                    android:id="@+id/current_hour_temp_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:minHeight="80dp"
                    android:textAlignment="center"
                    android:textSize="70sp"
                    android:textStyle="italic|bold"
                    app:layout_constraintBottom_toBottomOf="@+id/current_hour_image"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.238"
                    app:layout_constraintStart_toEndOf="@+id/current_hour_image"
                    app:layout_constraintTop_toTopOf="@+id/current_hour_image"
                    app:layout_constraintVertical_bias="0.426"
                    tools:text="75oC" />

                <TextView
                    android:id="@+id/current_day_of_week_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="50dp"
                    app:layout_constraintBottom_toTopOf="@+id/forecast_hour_txt"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/current_hour_image"
                    app:layout_constraintVertical_bias="0.365"
                    />

                <TextClock
                    android:id="@+id/forecast_hour_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:format12Hour="h:mm a"
                    android:gravity="center"
                    android:minHeight="70dp"
                    android:textAlignment="center"
                    android:textSize="55sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/current_hour_image"
                    app:layout_constraintVertical_bias="1.0"
                    tools:text="9:00pm" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/forecast_hourly_recyclerview"

                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:layout_margin="24dp"
        >

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/forecast_weekly_recyclerview"
            android:paddingBottom="16dp"
            />
    </androidx.cardview.widget.CardView>

</LinearLayout>