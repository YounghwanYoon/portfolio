<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/weather_fragment_linear"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:weightSum="10"
    android:background="@drawable/fall_image"
    tools:context = ".feature_weather.presentation.WeatherFragment"
    >
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/grey_dark"
        >
        <ProgressBar
            android:id="@+id/progress_bar_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.286" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="10"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="7">

                <ImageView
                    android:id="@+id/gps_icon_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_location_on_24"
                    app:layout_constraintBottom_toBottomOf="@+id/current_location_txt"
                    app:layout_constraintEnd_toStartOf="@+id/current_location_txt"
                    app:layout_constraintHorizontal_bias="0.761"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/current_location_txt"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/current_location_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="21dp"
                    android:minWidth="75dp"
                    android:minHeight="25dp"
                    app:layout_constraintBottom_toTopOf="@+id/current_hour_image"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.109"
                    app:layout_constraintStart_toStartOf="@+id/current_hour_image"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.174"
                    tools:text="Arlington, TX" />

                <ImageView
                    android:id="@+id/current_hour_image"
                    android:layout_width="130dp"
                    android:layout_height="120dp"
                    android:contentDescription="@string/forecast_image"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.068"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.623"
                    tools:src="@drawable/ic_face_48dp" />

                <TextView
                    android:id="@+id/current_hour_temp_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:minHeight="80dp"
                    android:textAlignment="center"
                    android:textSize="70sp"
                    android:textStyle="italic|bold"
                    app:layout_constraintBottom_toBottomOf="@+id/current_hour_image"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.571"
                    app:layout_constraintStart_toEndOf="@+id/current_hour_image"
                    app:layout_constraintTop_toTopOf="@+id/current_hour_image"
                    app:layout_constraintVertical_bias="0.555"
                    tools:text="75oF" />

                <TextView
                    android:id="@+id/current_day_of_week_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="monospace"
                    android:gravity="center"
                    android:minWidth="75dp"
                    android:minHeight="25dp"
                    android:textStyle="bold|italic"
                    app:layout_constraintBottom_toTopOf="@+id/forecast_hour_txt"
                    app:layout_constraintEnd_toEndOf="@+id/forecast_hour_txt"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="@+id/forecast_hour_txt"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.727"
                    tools:text="Monday" />

                <TextClock
                    android:id="@+id/forecast_hour_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:format12Hour="h:mm a"
                    android:gravity="center"
                    android:minHeight="50dp"
                    android:textAlignment="center"
                    android:textSize="35sp"
                    app:layout_constraintBottom_toTopOf="@+id/current_hour_temp_txt"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.866"
                    app:layout_constraintStart_toEndOf="@+id/current_location_txt"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.587"
                    tools:text="9:00pm" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:layout_marginBottom="16dp"
                android:backgroundTint="@color/see_through"
                card_view:cardElevation="0dp"
                app:cardPreventCornerOverlap="false"
                app:cardBackgroundColor="@color/see_through"
                app:cardUseCompatPadding="false"
                >

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/forecast_hourly_recyclerview"

                    />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:layout_margin="24dp"
        android:backgroundTint="@color/grey_dark"
        >
        <ProgressBar
            android:id="@+id/progress_bar_btm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.899" />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/forecast_weekly_recyclerview"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:paddingTop="1dp"
            />
    </androidx.cardview.widget.CardView>

</LinearLayout>