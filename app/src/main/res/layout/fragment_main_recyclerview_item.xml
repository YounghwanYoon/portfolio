<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minWidth = "70dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:backgroundTint="@color/grey_dark"
    tools:ignore="RtlSymmetry">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="@color/grey_dark">

        <ImageView
            android:id="@+id/main_recyclerview_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_face_48dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@string/app_name" />

        <TextView
            android:id="@+id/main_recyclerview_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:minWidth="100dp"
            android:minHeight="25dp"
            tools:text="Title of this"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/main_recyclerview_img"
            app:layout_constraintStart_toStartOf="@+id/main_recyclerview_img"
            app:layout_constraintTop_toBottomOf="@+id/main_recyclerview_img"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
